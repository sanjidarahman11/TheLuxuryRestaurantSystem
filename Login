    private void log_inActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        //2 4
        
        String S1 = mobile_number.getText();
        char ps [] = password.getPassword();
        String S2= String.copyValueOf(ps);
        String rd;
        try {
            rd = br.readLine();
        while(rd!=null)
        {
            String nrd [] = rd.split(" ");
            if(nrd[2].equals(S1)&& nrd[4].equals(S2))
            {
                num= nrd[2];
                pass=nrd[4];
                new Profile(num,pass).setVisible(true);
                this.setVisible(false);
                this.dispose();
                break;
            }
            
        }
        } catch (IOException ex) {
            Logger.getLogger(SignUp_LogIn.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }                                      

